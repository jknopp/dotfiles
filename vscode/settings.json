{
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,

    /*
     **************
     *** EDITOR ***
     **************
    */

    /* fonts */
    "editor.fontFamily": "Fira Code, FiraCodeNerdFontComplete-Retina",
    "editor.fontLigatures": true,
    "editor.fontSize": 12,

    /*
     ****************
     *** TERMINAL ***
     ****************   
    */

    "terminal.integrated.shell.linux": "/bin/zsh",
    "terminal.integrated.shell.osx": "/bin/zsh",
    "terminal.integrated.shell.windows": "C:\\Users\\owner\\AppData\\Local\\Microsoft\\WindowsApps\\pwsh.exe",
    "terminal.integrated.shellArgs.windows": [
        "-ExecutionPolicy", "Bypass",
        "-NoLogo",
        "-NoExit"
    ],
    "terminal.integrated.showExitAlert": false,
    "terminal.external.osxExec": "iTerm.app",
    "terminal.external.windowsExec": "C:\\Users\\owner\\AppData\\Local\\Microsoft\\WindowsApps\\wt.exe",
    "terminal.external.linuxExec": "kitty",

    /* fonts */
    "terminal.integrated.fontFamily": "Fira Code, FiraCodeNerdFontComplete-Retina",
    "terminal.integrated.fontSize": 14,

    /*
     *****************
     *** WORKBENCH ***
     *****************
    */

    "workbench.tips.enabled": false,
    "window.zoomLevel": 0,
    "breadcrumbs.enabled": true,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "workbench.startupEditor": "none",

    /* files */
    "files.associations": {
        "Dockerfile_*": "dockerfile",
        "Dockerfile-*": "dockerfile"
    },

    /* NPM */
    "npm.packageManager": "npm",

    /*
     **************
     *** SEARCH ***
     **************
    */

    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true
    },

    /*
     *****************
     *** LANGUAGES ***
     *****************
    */

    "javascript.preferences.quoteStyle": "single",
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },

    /*
     ****************
     *** THEMEING ***
     ****************
    */
    "workbench.colorTheme": "Dracula",
    "workbench.iconTheme": "vscode-icons",

    /*
     ******************
     *** EXTENSIONS ***
     ******************
    */

    /* EDITOR */
    "vsicons.dontShowNewVersionMessage": true,
    "editor.suggestSelection": "first",
    "explorer.confirmDelete": false,
    "webhint.enableTelemetry": "disabled"
}
